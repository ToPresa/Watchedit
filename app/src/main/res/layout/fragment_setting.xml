<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.watchedit.android.SettingFragment">

    <ListView
        android:id="@+id/list234"
        android:layout_width="match_parent"
        android:layout_height="391dp"
        android:layout_gravity="center_horizontal|bottom"
        android:layout_below="@+id/headerLinearLay"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">
    </ListView>

    <RelativeLayout
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:id="@+id/headerLinearLay"
        android:orientation="horizontal"
        android:layout_gravity="right|top"
        android:backgroundTint="#f1272727"
        android:backgroundTintMode="src_over"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="50dp"
        android:background="#f02e2e2e">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="@string/search_menu_title"
            android:id="@+id/textView2"
            android:layout_centerHorizontal="true"
            android:textColor="@color/abc_background_cache_hint_selector_material_light" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView2">

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/editText12"
                android:imeOptions="actionSend"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@+id/button45"
                android:maxLines="1"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:textColor="@android:color/white" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/search_menu_title"
                android:id="@+id/button45"
                android:layout_alignParentTop="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true" />
        </RelativeLayout>

    </RelativeLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/login"
        android:id="@+id/textView523"
        android:layout_below="@+id/imageView532"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView532"
        android:src="@drawable/logo"
        android:layout_below="@+id/headerLinearLay"
        android:layout_centerHorizontal="true" />


</RelativeLayout>
